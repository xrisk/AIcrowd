<%= render 'header' %>

<!-- section -->
<div class="section-p-md">
  <div class="container-fluid">
    <div class="row">

        <div class="col-12", style="padding:0">
          <h3>Change Password</h3>
          <hr/>
          <br>
        </div>

      <!-- account settings -->

        <%= form_for resource, as: resource_name, url: registration_path(resource_name), method: :put, html: { class: 'form-rg' }, validate: true do |f| %>
          <div class="form-group">
            <label for="currentPassword">Current password</label>
            <%= f.password_field :current_password, autocomplete: :off,class: "form-control" %>
          </div>

          <div class="form-group">
            <label for="newPassword">Create a new password</label>
            <%= f.password_field :password, autocomplete: :off, class: "form-control" %>
            <small id="newPasswordHelp" class="form-text text-muted">Min. of 8 characters</small>
          </div>

          <div class="form-group">
            <label for="retypeNewPassword">Re-type new password</label>
            <%= f.password_field :password_confirmation, autocomplete: :off, class: "form-control" %>
          </div>

          <div class="btn-set" aria-hidden="true">
            <%= f.button 'Update', type: 'submit', class: 'btn btn-primary' %>
            <%= link_to 'Cancel', edit_participant_registration_path, class: 'btn btn-secondary' %>
          </div>

        <% end %>

      </div>
      <!-- /account settings -->

    </div>
  </div>
</div>

<div class="section-p-md">
  <div class="container-fluid">
    <div class="row">

        <div class="col-12", style="padding:0">
          <h3>Change Email</h3>
          <hr/>
          <br>
        </div>

      <!-- account settings -->

        <%= form_for resource, as: resource_name, url: registration_path(resource_name), method: :put, html: { class: 'form-rg' }, validate: true do |f| %>
          <div class="form-group">
            <label for="email">New email</label>
            <%= f.text_field :email, class: "form-control" %>
          </div>

          <div class="form-group">
            <label for="currentPassword">Current password</label>
            <%= f.text_field :current_password, autocomplete: :off,class: "form-control" %>
          </div>

          <div class="btn-set" aria-hidden="true">
            <%= f.button 'Update', type: 'submit', class: 'btn btn-primary' %>
            <%= link_to 'Cancel', edit_participant_registration_path, class: 'btn btn-secondary' %>
          </div>

        <% end %>

      </div>
      <!-- /account settings -->

    </div>
  </div>
</div>
<!-- /section -->

<!-- section -->
<div class="section-p-md border-top">
  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <a href="#" data-toggle="modal" data-target="#deleteAccount">Delete your AIcrowd account</a>
      </div>
    </div>
  </div>
</div>
<!-- /section -->
